<?xml version="1.0"?>
<block>
	<name>FMComms1 Source</name>
	<key>iio_fmcomms1_source</key>
	<category>Industrial IO</category>
	<import>from gnuradio import iio</import>
	<make>iio.fmcomms1_source($host, $frequency, $samplerate, $decimation - 1, $bandwidth, $ch1_en, $ch2_en, $buffer_size, $gain)</make>
	<callback>set_params($frequency, $samplerate, $bandwidth, $ch1_en, $ch2_en, $gain)</callback>

	<param>
		<name>Hostname</name>
		<key>host</key>
		<value></value>
		<type>string</type>
	</param>

	<param>
		<name>LO Frequency</name>
		<key>frequency</key>
		<value>2400000000</value>
		<type>int</type>
	</param>

	<param>
		<name>Sample rate</name>
		<key>samplerate</key>
		<value>1536000</value>
		<type>int</type>
	</param>

	<param>
		<name>RF bandwidth</name>
		<key>bandwidth</key>
		<value>20000000</value>
		<type>int</type>
	</param>

	<param>
		<name>Buffer size</name>
		<key>buffer_size</key>
		<value>0x8000</value>
		<type>int</type>
	</param>

	<param>
		<name>Decimation</name>
		<key>decimation</key>
		<value>1</value>
		<type>int</type>
	</param>

	<param>
		<name>Channel 1 Enabled</name>
		<key>ch1_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Channel 2 Enabled</name>
		<key>ch2_en</key>
		<value>True</value>
		<type>enum</type>
		<option><name>True</name><key>True</key></option>
		<option><name>False</name><key>False</key></option>
	</param>

	<param>
		<name>Gain (RX)(dB)</name>
		<key>gain</key>
		<value>4.5</value>
		<type>real</type>
	</param>

	<!-- Avoid divisions by zero -->
	<check>$decimation &gt; 0</check>

	<!-- Avoid frequency out of range -->
	<check>400000000 &lt;= $frequency &lt;= 4400000000</check>

	<!-- Avoid gain out of range -->
	<check>4.5 &lt;= $gain &lt;= 20.0</check>

	<check>sum([$ch1_en, $ch2_en]) &gt; 0</check>

	<source>
		<name>out</name>
		<type>short</type>
		<nports>sum([$ch1_en, $ch2_en])</nports>
	</source>
</block>
